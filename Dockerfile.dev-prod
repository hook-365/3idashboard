# Use development server in production mode
# This bypasses build issues while still serving the application

FROM node:18-alpine

WORKDIR /app

# Copy everything
COPY package.json package-lock.json ./
COPY node_modules ./node_modules
COPY . .

# Expose port
EXPOSE 3000

# Set environment to development for dev server
ENV NODE_ENV=development
ENV PORT=3000

# Run the Next.js dev server directly
CMD ["npx", "next", "dev", "-p", "3000", "-H", "0.0.0.0"]